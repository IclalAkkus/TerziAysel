                <!-- This form is pre-integrated with SB Forms.-->
                <!-- To make this form functional, sign up at-->
                <!-- https://startbootstrap.com/solution/iletisim-forms-->
                <!-- to get an API token!-->
                <form id="iletisimForm" method="post" action="@Url.Action("CreateIletisim", "Kullanici")">
                    <div class="row align-items-stretch mb-5">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="form-control" id="name" name="TamAd" type="text" 
                                    placeholder="Adınız *" required 
                                    value="@(Context.Session.GetString("UserName") != null ? 
                                        _context.Kullanicilar.FirstOrDefault(k => 
                                            k.KullaniciAdi == Context.Session.GetString("UserName"))?.TamAd : "")" />
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="email" name="Email" type="email" 
                                    placeholder="E-posta Adresiniz *" required 
                                    value="@(Context.Session.GetString("UserName") != null ? 
                                        _context.Kullanicilar.FirstOrDefault(k => 
                                            k.KullaniciAdi == Context.Session.GetString("UserName"))?.Email : "")" />
                            </div>
                            <div class="form-group mb-md-0">
                                <input class="form-control" id="phone" name="TelefonNo" type="tel" 
                                    placeholder="Telefon Numaranız *" required 
                                    value="@(Context.Session.GetString("UserName") != null ? 
                                        _context.Kullanicilar.FirstOrDefault(k => 
                                            k.KullaniciAdi == Context.Session.GetString("UserName"))?.TelefonNo : "")" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group form-group-textarea mb-md-0">
                                <textarea class="form-control" id="message" name="Mesaj" 
                                    placeholder="Mesajınız *" required></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary btn-xl text-uppercase" type="submit">
                            Mesaj Gönder
                        </button>
                    </div>
                </form>
            </div>
        </section>
        <!-- Footer-->
