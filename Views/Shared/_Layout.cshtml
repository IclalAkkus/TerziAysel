        <script>
        $(document).ready(function() {
            $('.yorumForm').on('submit', function(e) {
                e.preventDefault();
                
                var form = $(this);
                var yorumMetni = form.find('textarea[name="YorumMetni"]').val().trim();
                var kategori = form.data('kategori');
                
                if (!yorumMetni) {
                    alert('Lütfen bir yorum yazın.');
                    return false;
                }

                $.ajax({
                    url: '@Url.Action("YorumEkle", "Kullanici")',
                    type: 'POST',
                    data: { 
                        yorumMetni: yorumMetni,
                        kategori: kategori
                    },
                    success: function(response) {
                        if (response.success) {
                            var yeniYorum = `
                                <div class="yorum">
                                    <div class="yorum-sol">
                                        <h6 class="kullanici-adi">${response.yorum.kullaniciAdi}</h6>
                                        <small class="yorum-tarihi">${response.yorum.tarih}</small>
                                    </div>
                                    <div class="yorum-sag">
                                        <p class="yorum-metni">${response.yorum.yorumMetni}</p>
                                    </div>
                                </div>
                            `;
                            
                            var yorumlarListesi = form.closest('.yorumlar-container').find('.yorumlarListesi');
                            yorumlarListesi.prepend(yeniYorum);
                            
                            form.find('textarea').val('');
                            
                            var yorumSayisiElement = form.closest('.yorumlar-container').find('.yorum-sayisi');
                            var yorumSayisi = parseInt(yorumSayisiElement.text().replace(/[()]/g, '')) + 1;
                            yorumSayisiElement.text(`(${yorumSayisi})`);
                        } else {
                            alert(response.message || 'Yorum eklenirken bir hata oluştu.');
                        }
                    },
                    error: function() {
                        alert('Yorum eklenirken bir hata oluştu. Lütfen tekrar deneyin.');
                    }
                });

                return false;
            });
        });
        </script>
        <script>
        $(document).ready(function() {
            // URL'de section parametresi varsa o bölüme scroll yap
            var section = window.location.href.split('section=')[1];
            if (section) {
                document.getElementById(section).scrollIntoView();
            }

            // İletişim formunu Ajax ile gönder
            $('#iletisimForm').on('submit', function(e) {
                e.preventDefault();
                
                $.ajax({
                    url: this.action,
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(response) {
                        if (response.success) {
                            $('#iletisimForm')[0].reset();
                            showAlert('success', 'Mesajınız başarıyla gönderildi!');
                        } else {
                            showAlert('danger', 'Lütfen tüm alanları doldurun.');
                        }
                    },
                    error: function() {
                        showAlert('danger', 'Mesaj gönderilirken bir hata oluştu. Lütfen daha sonra tekrar deneyin.');
                    }
                });
            });

            function showAlert(type, message) {
                var alertHtml = `
                    <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                `;
                
                // Varolan alertleri kaldır
                $('.alert').remove();
                
                // Yeni alerti ekle
                $('#iletisimForm').before(alertHtml);
                
                // İletişim bölümüne scroll yap
                document.getElementById('iletisim').scrollIntoView();
            }
        });
        </script>
