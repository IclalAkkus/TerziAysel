        <style>
            .yorumlar-container {
                background-color: #fff;
                border-radius: 6px;
                padding: 15px;
                margin-top: 20px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.08);
                border: 1px solid #e9ecef;
            }

            .yorumlar-baslik {
                display: flex;
                align-items: center;
                margin-bottom: 15px;
                padding-bottom: 8px;
                border-bottom: 2px solid #ffd54f;
            }

            .yorumlar-baslik h4 {
                font-size: 1.1rem;
                margin: 0;
                color: #032438;
                font-weight: 600;
            }

            .yorum-sayisi {
                font-size: 0.8rem;
                background-color: #fff3cd;
                color: #856404;
                padding: 2px 8px;
                border-radius: 12px;
                margin-left: 8px;
            }

            .yorum-form {
                margin-bottom: 15px;
                background-color: #f8f9fa;
                padding: 12px;
                border-radius: 6px;
            }

            .yorum-form textarea {
                resize: none;
                height: 40px;
                font-size: 0.9rem;
                padding: 8px;
                border: 1px solid #ced4da;
                border-radius: 4px;
            }

            .yorum-form textarea:focus {
                border-color: #ffd54f;
                box-shadow: 0 0 0 0.2rem rgba(255, 213, 79, 0.25);
            }

            .yorum-form button {
                padding: 4px 12px;
                font-size: 0.9rem;
                background: linear-gradient(45deg, #032438, #064670);
                color: white;
                border: none;
                border-radius: 4px;
                transition: all 0.3s ease;
            }

            .yorum-form button:hover {
                background: linear-gradient(45deg, #ffc107, #ffd54f);
                color: #032438;
                transform: translateY(-1px);
            }

            .yorumlarListesi {
                max-height: 300px;
                overflow-y: auto;
            }

            .yorum {
                display: flex;
                padding: 10px;
                margin-bottom: 8px;
                background: linear-gradient(to right, #f8f9fa, #ffffff);
                border-radius: 6px;
                border: 1px solid #e9ecef;
                transition: transform 0.2s ease;
            }

            .yorum:hover {
                transform: translateX(5px);
                border-left: 3px solid #ffd54f;
            }

            .yorum-sol {
                width: 180px;
                padding-right: 15px;
                border-right: 2px solid #e9ecef;
            }

            .kullanici-adi {
                font-size: 0.9rem;
                font-weight: 600;
                color: #032438;
                margin: 0;
                display: flex;
                align-items: center;
            }

            .kullanici-adi::before {
                content: "👤";
                margin-right: 5px;
                font-size: 0.9rem;
            }

            .yorum-tarihi {
                font-size: 0.8rem;
                color: #6c757d;
                margin: 0;
                display: flex;
                align-items: center;
            }

            .yorum-tarihi::before {
                content: "🕒";
                margin-right: 5px;
                font-size: 0.8rem;
            }

            .yorum-sag {
                flex: 1;
                padding-left: 15px;
                display: flex;
                align-items: center;
            }

            .yorum-metni {
                margin: 0;
                font-size: 0.9rem;
                color: #495057;
                line-height: 1.4;
            }

            /* Scrollbar */
            .yorumlarListesi::-webkit-scrollbar {
                width: 6px;
            }

            .yorumlarListesi::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 3px;
            }

            .yorumlarListesi::-webkit-scrollbar-thumb {
                background: linear-gradient(45deg, #032438, #064670);
                border-radius: 3px;
            }

            .yorumlarListesi::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(45deg, #ffc107, #ffd54f);
            }

            /* Giriş yapma uyarısı */
            .giris-uyari {
                background-color: #fff3cd;
                border: 1px solid #ffeeba;
                color: #856404;
                padding: 8px 12px;
                border-radius: 4px;
                font-size: 0.9rem;
                margin-bottom: 15px;
            }

            .giris-uyari a {
                color: #533f03;
                text-decoration: underline;
                font-weight: 500;
            }

            .giris-uyari a:hover {
                color: #032438;
            }
        </style>
        
        
